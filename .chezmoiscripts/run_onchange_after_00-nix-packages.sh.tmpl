  {{ end }}
)

for package in "${NIX_PACKAGES[@]}"; do
  if nix-env -iA "nixpkgs.$package" 2>/dev/null; then
    echo "âœ… ** ${package} ** installed via Nix"
    if command -v brew &>/dev/null; then
      if brew list --formula | grep -q "^$package$"; then
          echo "  ğŸ—‘ï¸ Uninstalling ** ${package} ** from Homebrew..."
          brew uninstall "$package"
          echo ""
      fi
    fi
  else
    echo "âŒ Failed to install ** ${package} ** via Nix (will use Homebrew fallback)"
    echo ""
  fi
done

echo ""
echo "System generations (for rollback):"
nix-env --list-generations | tail -5
