[general]

# Fast reload
live_config_reload = true

{{ if eq .chezmoi.os "darwin" }}
# Thema
import = [
	"~/.config/alacritty/themes/themes/tokyo-night.toml"
]
{{ end }}

[env]
TERM = "xterm-256color"

[window]
decorations = "none"
dynamic_padding = true
opacity = 0.9

[window.padding]
x = 2
y = 2

{{ if (.fontsEnabled) }}

[font]
size = 20.0

[font.normal]
family = "Berkeley Mono"
style = "Regular"

[font.bold]
family = "Berkeley Mono"
style = "Heavy"

[font.bold_italic]
family = "Berkeley Mono"
style = "Heavy Italic"

[font.italic]
family = "Berkeley Mono"
style = "Medium Italic"

{{ end }}

# Claude terminal setup
[[keyboard.bindings]]
key = "Return"
mods = "Shift"
chars = "\u001b\r"
