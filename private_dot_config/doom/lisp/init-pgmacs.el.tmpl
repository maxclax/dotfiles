;;; lisp/init-pgmacs.el -*- mode: emacs-lisp; lexical-binding: t; -*-

;;; Commentary:
;; PostgreSQL client configuration using pgmacs

(use-package! pgmacs
  :defer t)

;; Function to quickly connect to PostgreSQL (interactive)
(defun my/pgmacs-connect ()
  "Connect to PostgreSQL database with pgmacs (interactive widget)."
  (interactive)
  (pgmacs))

;; Function to connect using connection string
(defun my/pgmacs-connect-string ()
  "Connect to PostgreSQL using connection string."
  (interactive)
  (pgmacs-open-string "host=localhost port=5432 dbname=postgres user=postgres"))

;; Function to connect using URI
(defun my/pgmacs-connect-uri ()
  "Connect to PostgreSQL using URI format."
  (interactive)
  (pgmacs-open-uri "postgresql://postgres:postgres@localhost:5432/postgres"))

(provide 'init-pgmacs)
