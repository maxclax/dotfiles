# -*- mode: nix; -*-
{ config, pkgs, ... }:

{
  # Import modular configurations
  imports = [
    ./packages.nix              # Package installations

    #########################################################
{{- if eq .shell "zsh" }}
    ./programs/zsh.nix           # Zsh configuration
{{- end }}
{{- if eq .shell "fish" }}
    ./programs/fish.nix          # Fish configuration
{{- end }}
{{- if not .nixosContainer }}
    ./programs/bash.nix          # Bash configuration
{{- end }}
    ./programs/vim.nix           # Vim configuration
    ./programs/direnv.nix        # Direnv configuration
    ./programs/atuin.nix         # Atuin configuration
    ./programs/starship.nix      # Starship configuration
    ./programs/ranger.nix        # Ranger configuration
{{- if eq .chezmoi.os "darwin" }}
    ./programs/borders.nix       # Borders window management
    ./programs/espanso.nix       # Espanso text expander
{{- end }}
  ];

  # Home Manager needs a bit of information about you and the paths it should manage
  home.username = "{{ .chezmoi.username }}";
  home.homeDirectory = "{{ .chezmoi.homeDir }}";

  # This value determines the Home Manager release that your configuration is
  # compatible with. This helps avoid breakage when a new Home Manager release
  # introduces backwards incompatible changes.
  home.stateVersion = "25.05";

  # Let Home Manager install and manage itself
  programs.home-manager.enable = true;

  # Configure Home Manager to avoid package conflicts
  home.enableNixpkgsReleaseCheck = false;

{{- if or (eq .chezmoi.os "linux") .extraUser }}
  # Allow unfree packages (handled by nix-darwin when extraUser is false)
  nixpkgs.config.allowUnfree = true;
{{- end }}

  # Font configuration
  fonts.fontconfig.enable = true;

  # Nix configuration
  home.file.".config/nix/nix.conf".source = ./nix.conf;

{{- if .nixosContainer }}
  # NixOS Container specific settings
  programs.bash.enable = false;

  # Handle package conflicts in containers
  home.activation.removeConflicts = lib.hm.dag.entryAfter ["writeBoundary"] ''
    # Remove conflicting packages before Home Manager installs
    if command -v nix-env >/dev/null 2>&1; then
      echo "üîß Removing conflicting packages in container..."
      echo "Found packages: $(nix-env -q)"
      for pkg in bash-interactive git-minimal coreutils-full findutils gnugrep gnutar gzip nss-cacert iana-etc less which; do
        if nix-env -q 2>/dev/null | grep -q "^$pkg"; then
          echo "  Removing: $pkg"
          nix-env -e "$pkg" 2>/dev/null || true
        fi
      done
      echo "‚úÖ Conflicts resolved - remaining: $(nix-env -q)"
    else
      echo "‚ùå nix-env not found"
    fi
  '';
{{- else if eq .chezmoi.os "linux" }}
  # Enable desktop integration for GUI applications (Linux only)
  targets.genericLinux.enable = true;

{{ if not .ephemeral -}}
  # Zen Browser configuration (Linux desktop only, not containers)
  programs.zen-browser = {
    enable = true;
    # Available options: beta, twilight, twilight-official
    # beta = latest beta version with newest features
    variant = "beta";
  };
{{- end }}
{{- end }}
}
