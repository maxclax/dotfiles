{
  "title": "Profile Switcher",
  "rules": [
    {
      "description": "Cycle through profiles",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/assets/scripts/profile_switcher.sh"
            }
          ]
        }
      ]
    }
  ]
}
