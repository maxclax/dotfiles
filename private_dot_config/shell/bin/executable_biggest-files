#!/bin/bash

DIR=${1:-.}

echo "ðŸ”Ž Searching for the biggest files in: $DIR"
echo "--------------------------------------------"

# Detect OS
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS (BSD) version
    find "$DIR" -type f -exec du -h {} \; 2>/dev/null | sort -gr | head -n 10
else
    # Debian (GNU) version
    find "$DIR" -type f -exec du -h {} \; 2>/dev/null | sort -rh | head -n 10
fi

